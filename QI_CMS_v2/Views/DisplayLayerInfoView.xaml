<UserControl x:Class="QI_CMS_v2.Views.DisplayLayerInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QI_CMS_v2.Views"
             xmlns:properties="clr-namespace:QI_CMS_v2.ControlProperties"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="InfoTextBox" TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#AAFFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="CaretBrush" Value="#AAFFFFFF"/>
        </Style>
        <Style x:Key="OrangeBorderButtonStyle" TargetType="Button" BasedOn="{StaticResource BorderButtonStyle}">
            <Setter Property="properties:CustomButtonProperties.MouseOverBackground" Value="{StaticResource ColorSecondary}"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding SelectedLayerRect.Name}" FontSize="16" Foreground="White" Margin="10" />
        <TextBlock Text="위치" FontSize="16" Foreground="White" Margin="10" />
        <UniformGrid Rows="1" Columns="2" Margin="10, 0">
            <Border VerticalAlignment="Center" 
                    Margin="10, 5" Padding="5" Background="#333333" 
                    BorderThickness="1" CornerRadius="3"
                    Effect="{StaticResource BorderButtonShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="X" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAFFFFFF" />
                    <TextBox Grid.Column="1" Text="{Binding SelectedLayerRect.ActualX, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InfoTextBox}"/>
                </Grid>
            </Border>
            <Border VerticalAlignment="Center" 
                    Margin="10, 5" Padding="5" Background="#333333" 
                    BorderThickness="1" CornerRadius="3"
                    Effect="{StaticResource BorderButtonShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Y" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAFFFFFF" />
                    <TextBox Grid.Column="1" Text="{Binding SelectedLayerRect.ActualY, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}"  
                             Style="{StaticResource InfoTextBox}"/>
                </Grid>
            </Border>
        </UniformGrid>
        <TextBlock Text="수평 정렬" FontSize="10" Foreground="White" Margin="10,10,10,0" />
        <UniformGrid Columns="3" Margin="10">
            <Button Content="왼쪽"
                    Command="{Binding LayerHorAlignCommand}" CommandParameter="Left"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="중앙"
                    Command="{Binding LayerHorAlignCommand}" CommandParameter="Center"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="오른쪽"
                    Command="{Binding LayerHorAlignCommand}" CommandParameter="Right"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
        </UniformGrid>
        <TextBlock Text="수직 정렬" FontSize="10" Foreground="White" Margin="10,0" />
        <UniformGrid Columns="3" Margin="10">
            <Button Content="위쪽"
                    Command="{Binding LayerVerAlignCommand}" CommandParameter="Top"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="중앙"
                    Command="{Binding LayerVerAlignCommand}" CommandParameter="Center"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="아래쪽"
                    Command="{Binding LayerVerAlignCommand}" CommandParameter="Bottom"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
        </UniformGrid>
        <TextBlock Text="크기" FontSize="16" Foreground="White" Margin="10" />
        <UniformGrid Rows="1" Columns="2" Margin="10, 0">
            <Border VerticalAlignment="Center" 
                    Margin="10, 5" Padding="5" Background="#333333" 
                    BorderThickness="1" CornerRadius="3"
                    Effect="{StaticResource BorderButtonShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="W" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAFFFFFF" />
                    <TextBox Grid.Column="1" Text="{Binding SelectedLayerRect.ActualWidth, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}"  
                             Style="{StaticResource InfoTextBox}"/>
                </Grid>
            </Border>
            <Border VerticalAlignment="Center" 
                    Margin="10, 5" Padding="5" Background="#333333" 
                    BorderThickness="1" CornerRadius="3"
                    Effect="{StaticResource BorderButtonShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="H" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAFFFFFF" />
                    <TextBox Grid.Column="1" Text="{Binding SelectedLayerRect.ActualHeight, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}"  
                             Style="{StaticResource InfoTextBox}"/>
                </Grid>
            </Border>
        </UniformGrid>
        <TextBlock Text="맞춤 크기" FontSize="10" Foreground="White" Margin="10,10,10,0" />
        <UniformGrid Columns="3" Margin="10">
            <Button Content="화면맞춤"
                    Command="{Binding LayerFitSizeCommand}" CommandParameter="displaysize"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="화면너비"
                    Command="{Binding LayerFitSizeCommand}" CommandParameter="displaywidth"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="화면높이"
                    Command="{Binding LayerFitSizeCommand}" CommandParameter="displayheight"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="전체맞춤"
                    Command="{Binding LayerFitSizeCommand}" CommandParameter="fullsize"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="전체너비"
                    Command="{Binding LayerFitSizeCommand}" CommandParameter="fullwidth"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
            <Button Content="전체높이"
                    Command="{Binding LayerFitSizeCommand}" CommandParameter="fullheight"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
        </UniformGrid>
        <TextBlock Text="콘텐츠 설정" FontSize="16" Foreground="White" Margin="10" />
        <UniformGrid Columns="1" Margin="10,0">
            <Button Content="재생 일정"
                    Command="{Binding OpenLayerSchedulerCommand}"
                    Style="{StaticResource OrangeBorderButtonStyle}"
                    BorderBrush="Transparent"
                    Background="#333333" Foreground="White"
                    Margin="2,5" Padding="5">
            </Button>
        </UniformGrid>
    </StackPanel>
</UserControl>
