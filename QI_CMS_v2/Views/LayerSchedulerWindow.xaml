<Window x:Class="QI_CMS_v2.Views.LayerSchedulerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QI_CMS_v2.Views"
        xmlns:viewmodels="clr-namespace:QI_CMS_v2.ViewModels"
        mc:Ignorable="d"
        Title="LayerSchedulerWindow" Height="1000" Width="1600"
        Background="{StaticResource ColorPrimary}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:LayerScheduleListViewModel}">
            <local:LayerScheduleListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LayerScheduleInfoViewModel}">
            <local:LayerScheduleInfoView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
    </Grid>
</Window>
