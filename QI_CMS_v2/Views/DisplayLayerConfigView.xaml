<UserControl x:Class="QI_CMS_v2.Views.DisplayLayerConfigView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QI_CMS_v2.Views"
      xmlns:viewmodels="clr-namespace:QI_CMS_v2.ViewModels"
      xmlns:properties="clr-namespace:QI_CMS_v2.ControlProperties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="저장"
                        Command="{Binding RunCommand}"
                        VerticalAlignment="Center"
                        Style="{StaticResource BorderButtonStyle}"
                        BorderBrush="Transparent"
                        Background="#333333" Foreground="White"
                        properties:CustomButtonProperties.MouseOverBackground="#555555"
                        properties:CustomButtonProperties.MouseOverForeground="White"
                        Margin="0,0,5,0" Padding="10">
                </Button>
                <Button Content="불러오기"
                        Command="{Binding RunCommand}"
                        VerticalAlignment="Center"
                        Style="{StaticResource BorderButtonStyle}"
                        BorderBrush="Transparent"
                        Background="#333333" Foreground="White"
                        properties:CustomButtonProperties.MouseOverBackground="#555555"
                        properties:CustomButtonProperties.MouseOverForeground="White"
                        Margin="0,0,5,0" Padding="10">
                </Button>
                <Button Content="{Binding PlayState}"
                        Command="{Binding RunCommand}"
                        IsEnabled="{Binding IsRunCompleted}"
                        VerticalAlignment="Center"
                        Style="{StaticResource BorderButtonStyle}"
                        BorderBrush="Transparent"
                        Background="{StaticResource ColorSecondary}" Foreground="White"
                        properties:CustomButtonProperties.MouseOverBackground="{StaticResource ColorSecondaryLight}"
                        Margin="0,0,5,0" Padding="10">
                </Button>
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <local:DisplayLayerListView Grid.Column="0"/>
            <local:DisplayCanvasView Grid.Column="1"/>
            <local:DisplayLayerInfoView Grid.Column="2"/>
        </Grid>
    </DockPanel>
</UserControl>
